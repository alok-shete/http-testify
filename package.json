{
  "name": "http-testify",
  "version": "0.0.1",
  "description": "A Node.js library for testing HTTP servers.",
  "author": "Alok Shete",
  "license": "MIT",
  "homepage": "https://github.com/alok-shete/http-testify#readme",
  "publishConfig": {
    "@alok-shete:registry": "https://npm.pkg.github.com"
  },
  "bugs": {
    "url": "https://github.com/alok-shete/http-testify/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alok-shete/http-testify.git"
  },
  "keywords": [
    "HTTP-testify",
    "Mock Server",
    "API Testing",
    "HTTP Requests",
    "HTTP Methods",
    "Mocking",
    "Mocking Framework",
    "Node.js",
    "JavaScript",
    "Development",
    "Testing",
    "Mocking Library",
    "Express.js",
    "Mocking Server",
    "REST API Testing"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "typings": "dist/esm/index.d.ts",
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "test": "nyc --reporter=lcov --reporter=html mocha --require ts-node/register",
    "test-suite": "yarn test test/**/*.test.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test-suite"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.8",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "express": "^4.18.2"
  }
}